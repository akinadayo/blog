---
import { Header } from '../components/Header';
import { Footer } from '../components/Footer';
import { RetroBackground } from '../components/RetroBackground';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  currentPage?: string;
}

const { title, description = 'Tech & Life Journey - 技術と人生の交差点で生まれるストーリー', currentPage = 'home' } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | DEVLOG</title>

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-96MQWWQ70F"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-96MQWWQ70F');
    </script>
  </head>
  <body class="min-h-screen bg-background flex flex-col relative overflow-x-hidden">
    <RetroBackground client:only="react" />
    <Header client:only="react" currentPage={currentPage} />
    <main class="flex-grow relative">
      <slot />
    </main>
    <Footer client:only="react" />
  </body>
</html>
